<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="adminhtml_cache_flush_system">
        <observer name="webscale_flush_sitecache_system" instance="Webscale\CacheManager\Observer\FlushAllCacheObserver"/>
    </event>
    <event name="adminhtml_cache_flush_all">
        <observer name="webscale_flush_sitecache_type" instance="Webscale\CacheManager\Observer\FlushAllCacheObserver"/>
    </event>
    <event name="clean_media_cache_after">
        <observer name="webscale_flush_media_cache" instance="Webscale\CacheManager\Observer\FlushAllCacheObserver"/>
    </event>
    <event name="clean_catalog_images_cache_after">
        <observer name="webscale_flush_catalog_images_cache" instance="Webscale\CacheManager\Observer\FlushAllCacheObserver"/>
    </event>
    <event name="assigned_theme_changed">
        <observer name="webscale_flush_catalog_images_cache" instance="Webscale\CacheManager\Observer\FlushByTags"/>
    </event>
    <event name="assign_theme_to_stores_after">
        <observer name="webscale_flush_all_pagecache" instance="Webscale\CacheManager\Observer\FlushAllCacheObserver" />
    </event>
    <event name="controller_action_postdispatch_adminhtml_system_currency_saveRates">
        <observer name="webscale_flush_all_pagecache" instance="Webscale\CacheManager\Observer\FlushAllCacheObserver" />
    </event>
    <event name="controller_action_postdispatch_adminhtml_system_config_save">
        <observer name="webscale_flush_all_pagecache" instance="Webscale\CacheManager\Observer\FlushAllCacheObserver" />
    </event>
    <event name="controller_action_postdispatch_catalog_product_save">
        <observer name="webscale_flush_all_pagecache" instance="Webscale\CacheManager\Observer\FlushByTags" />
    </event>
    <event name="controller_action_postdispatch_adminhtml_system_currencysymbol_save">
        <observer name="webscale_flush_all_pagecache" instance="Webscale\CacheManager\Observer\FlushAllCacheObserver" />
    </event>
    <event name="model_save_commit_after">
        <observer name="webscale_flush_cache_after_model_save" instance="Webscale\CacheManager\Observer\FlushByTags" />
    </event>
    <event name="clean_cache_after_reindex">
        <observer name="webscale_flush_all_pagecache" instance="Webscale\CacheManager\Observer\FlushByTags" />
    </event>
</config>
